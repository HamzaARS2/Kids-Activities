<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.KidsActivities" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>

        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>

        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>

        <item name="colorOutline">@color/md_theme_light_outline</item>

        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_primaryInverse</item>

        <item name="textAppearanceTitleSmall">@style/rubikRegularForToolbarTitle</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.App.LabelLarge</item>

        <item name="android:statusBarColor">@color/md_theme_light_primaryContainer</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="OnBoardingTheme" parent="Theme.KidsActivities" >
        <item name="android:statusBarColor">@color/md_theme_light_primaryContainer</item>
        <item name="android:navigationBarColor">@color/md_theme_light_primaryContainer</item>
    </style>


    <style name="FacebookBtnStyle" parent="@style/Widget.Material3.Button.Icon">
        <item name="backgroundTint">@color/facebook_color</item>
        <item name="iconTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

    </style>

    <style name="InstagramBtnStyle" parent="@style/Widget.Material3.Button.Icon">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/insta_shape</item>
        <item name="iconTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>


    </style>

    <style name="YoutubeBtnStyle" parent="@style/Widget.Material3.Button.Icon">
        <item name="backgroundTint">@color/youtube_color</item>
        <item name="iconTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>





    <style name="Bottom_text_style">
        <item name="fontFamily">@font/acme</item>
    </style>

    <style name="clickedFabStyle">
        <item name="cornerSize">10%</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="nav_text_style" parent="android:Widget.TextView">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Nav_Drawer_Icon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimaryVariant</item>
    </style>

    <style name="rubikRegularForToolbarTitle" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="fredokaFont" parent="TextAppearance.Material3.TitleSmall" >
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
    </style>

    <style name="TextAppearance.App.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="ShapeAppearance.BalMukund.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="MyShapeableImage">
        <item name="cornerSizeBottomLeft">15%</item>
        <item name="cornerSizeBottomRight">15%</item>
        <item name="backgroundColor">@color/md_theme_light_secondaryContainer</item>
    </style>

    <style name="RoundedCorners" >
        <item name="cornerSize">50%</item>
        <item name="paddingBottomSystemWindowInsets">true</item>

    </style>

</resources>